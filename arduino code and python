//arduino code
#include <IRremote.h>

// Define the IR receiver pin
const int IR_RECEIVER_PIN = A1;

// Initialize the IR receiver object
IRrecv irrecv(IR_RECEIVER_PIN);
decode_results irData;

void setup() {
  // Start serial communication
  Serial.begin(9600);
  
  // Initialize the IR receiver
  irrecv.enableIRIn();
}

void loop() {
  if (irrecv.decode(&irData)) {
    // Send the received number to the PC
    Serial.print("number:");
    Serial.println(irData.value, HEX);  // Send the value as hexadecimal for easier identification
    
    irrecv.resume();  // Receive the next IR signal
  }
}




        
 *python updated code (that should send number to webserver)
 
 import serial
 import requests

# Configure the serial connection
serial_port = "COM3"  # replace with the appropriate serial port
baud_rate = 9600

# Define the web server URL
web_server_url = "http://example.com"  # replace with the URL of your web server

# Open the serial connection
ser = serial.Serial(serial_port, baud_rate)

while True:
    # Read a line from the serial port
    line = ser.readline().decode().strip()
    
    # Check if the line contains the number
    if line.startswith("number:"):
        number = line.split(":")[1]
        print("Number pressed:", number)
        
        # Send the number to the web server
        payload = {"number": number}  # Create a dictionary with the data to send
        response = requests.post(web_server_url, data=payload)  # Send a POST request to the web server
        
        # Check the response from the web server
        if response.status_code == 200:
            print("Number successfully sent to the web server.")
        else:
            print("Failed to send the number to the web server.")
// arduino code that understands what button is pressed 
#include <IRremote.h>

#define IR_RECEIVE_PIN A1

#define IR_BUTTON_1 12
#define IR_BUTTON_2 24
#define IR_BUTTON_3 94
#define IR_BUTTON_4 8
#define IR_BUTTON_5 28
#define IR_BUTTON_6 90
#define IR_BUTTON_7 66
#define IR_BUTTON_8 82
#define IR_BUTTON_9 0
#define IR_BUTTON_0 22

void setup() {
  Serial.begin(9600);
  IrReceiver.begin(IR_RECEIVE_PIN);
}

void loop() {
  if (IrReceiver.decode()) {
    IrReceiver.resume();
    int command = IrReceiver.decodedIRData.command;
    switch (command) {
      case IR_BUTTON_1: {
        Serial.println("Pressed on button 1");
        break;
      }
      case IR_BUTTON_2: {
        Serial.println("Pressed on button 2");
        break;
      }
      case IR_BUTTON_3: {
        Serial.println("Pressed on button 3");
        break;
      }
      case IR_BUTTON_4: {
        Serial.println("Pressed on button 4");
        break;
      }
      case IR_BUTTON_5: {
        Serial.println("Pressed on button 5");
        break;
      }
      case IR_BUTTON_6: {
        Serial.println("Pressed on button 6");
        break;
      }
      case IR_BUTTON_7: {
        Serial.println("Pressed on button 7");
        break;
      }
      case IR_BUTTON_8: {
        Serial.println("Pressed on button 8");
        break;
      }
      case IR_BUTTON_9: {
        Serial.println("Pressed on button 9");
        break;
      }
      case IR_BUTTON_0: {
        Serial.println("Pressed on button 0");
        break;
      }
      default: {
        Serial.println("Button not recognized");
      }
    }
  }
}

